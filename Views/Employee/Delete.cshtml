@model Employee_Management_System.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container">
    <h2>Delete Employee</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this employee?</h4>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ProfileImage))
            {
                <div class="text-center mb-4">
                    <img src="~/images/profiles/@Model.ProfileImage" alt="Profile Image" class="img-fluid rounded-circle" style="max-width: 200px; max-height: 200px;" />
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>@Model.FullName</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmployeeCode)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeCode)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                        
                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DepartmentName)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Position)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.HireDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HireDate)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>